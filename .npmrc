# NPM Configuration for Performance Optimization

# Use npm 7+ workspaces for better monorepo support
legacy-peer-deps=false

# Optimize installation for performance
fetch-timeout=60000
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Enable strict SSL (recommended for security)
strict-ssl=true

# Save exact versions to ensure reproducible builds
save-exact=false

# Use progress bar during installation
progress=true

# Reduce noise in logs
loglevel=warn
